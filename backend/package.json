{
  "name": "claude-code-canvas-backend",
  "version": "0.1.0",
  "description": "Backend server for Claude Code Canvas",
  "main": "dist/index.js",
  "type": "module",
  "directories": {
    "test": "tests"
  },
  "scripts": {
    "dev": "bun --watch src/index.ts",
    "build": "bun build src/index.ts --outdir ./dist --target bun",
    "start": "bun dist/index.js",
    "prod": "cd ../frontend && bunx vite build && cd ../backend && NODE_ENV=production bun src/index.ts",
    "style": "tsc --noEmit && eslint src --ext .ts",
    "test": "bunx --bun vitest run",
    "test:watch": "bunx --bun vitest"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@anthropic-ai/claude-agent-sdk": "^0.2.33",
    "fflate": "^0.8.2",
    "simple-git": "^3.30.0",
    "uuid": "^13.0.0",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@types/node": "^25.0.10",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^8.53.1",
    "@typescript-eslint/parser": "^8.53.1",
    "bun-types": "^1.3.8",
    "eslint": "^9.39.2",
    "typescript": "^5.9.3",
    "vitest": "^4.0.18"
  }
}
